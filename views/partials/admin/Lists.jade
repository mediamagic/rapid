	.page-header 
		.page-header-content
			h1 Lists Editor
				small &nbsp;
			a.back-button.big.page-back(href="#/main")
.page
	.page-region
		.page-region-content
			.grid
				.row
					.span4(style="width:100%;")
						h3.padding5.bg-color-green.progress-bar(style="height:40px;")							
							.a(style="position:absolute;left:5px;top:15px;")
								i.icon-list.white
								span.white Lists Editor
						select.bg-color-green.white(ng-model="filter.category")
							option(value="0", disabled) Select Category
							option(ng-repeat="cat in categories", value="{{ cat }}") {{ cat }}						
						ul#listWrapper(ui-sortable="sortableOptions", ng-model="category[filter.category]")
							//- li.itemInList(ng-repeat="item in category[filter.category] | orderBy:orderCategories") {{ item.name}}
							li.itemInList.bg-color-green.white(ng-class="{'icon-arrow-down':$first, 'icon-arrow-up':$last, 'icon-menu':$middle}", style="width:200px;", ng-repeat="item in category[filter.category]") {{ item.name }}
						br	
						button(ng-click="previewNewList()") Preview
						button(ng-click="saveLists()", ng-disabled="showListsSaveButton") Save	
						
						//- pre(ng-bind="category[filter.category] | json | orderBy:cat.categories[filter.category]")

						//- span(ng-repeat="cat in category[filter.category] | orderBy:orderCategories")
						span(ng-repeat="cat in category[filter.category]")
							.s {{ cat.categories[filter.category] }} {{ cat.name }}
						
