.page
	.page-header 
		.page-header-content
			h1 Skoda Rapid admin
				small &nbsp;

	.page-region
		.page-region-content
			.grid
				.row
					.span4(style="width:100%;")
						h3.padding5.bg-color-red
							i.icon-stats-up
							span  Items						
						table.bg-color-red
							thead
								tr
									th title
									th description
									th categories
									th preview type
									th content type
									th date created
									th status
									th actions
									th edit
							tbody
								tr(ng-repeat="item in content | orderBy:'-_id'")
									td {{ item.sidebar.title }}
									td {{ item.sidebar.description }}
									td {{ item.categories | remove:'all' | categories}}
									td {{ item.preview.type }}
									td {{ showContentType(item) }}
									td {{ getDateById(item._id) | date:'dd/MM/yyyy HH:mm' }}
									td {{ item.status | status }} 
										span (
										a(ng-click="toggleStatus(item._id)") {{ !item.status | status }}
										span )
									td 
										a(ng-click="itemPreview(item._id)") preview
									td 
										a(href="/admin#/editor/{{item._id}}") edit										

