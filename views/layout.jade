doctype 5
html(ng-app="rapid", ng-controller="GlobalCtrl", class="{{glob.mode}}")
	head
		title(ng-bind="settings.title")
		meta(charset="utf-8", lang="he-IL")
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		meta(name="description", content="")
		meta(name="viewport", content="width=device-width, user-scalable=yes")
		//meta(name="viewport", content="width=460, user-scalable = no")
		link(rel='stylesheet', href="/stylesheets/bootstrap-responsive.min.css")
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js")
		script(src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/js/bootstrap.min.js")
		script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.5/angular.min.js")
		script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.5/angular-resource.min.js")
		script(src="//code.angularjs.org/1.0.5/angular-cookies.min.js")
		script(src="/javascripts/vendor/jquery.slides.min.js")
		script(src="/javascripts/vendor/jquery.swfobject.js")
		script(src="/javascripts/vendor/angular-ui.min.js")
		script(src="/javascripts/vendor/angular-ui.min.js")
		script(src="/javascripts/vendor/jquery.isotope.min.js")
		script(src="/javascripts/app.js")
		script(src="/javascripts/controllers.js")
	body
		script
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', '']);
			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();
		#wrap
			#header(ui-scrollfix="+20")
				#nav
					span#title The New ŠKODA Rapid
					ul
						li(ng-repeat="(key,val) in settings.categories")
							input(type="radio", name="category", ng-model="filters.category", value="{{key}}", id="nav_{{$index}}")
							label(for="nav_{{$index}}") {{val}}
								.icon
						.clr
					a(ng-click="toggleForm()") form
				#headerForm(style="background: white;", ng-show="showForm")
					a(ng-click="toggleForm()") close
					.form
						form
							input(type="text", name="firstname", ng-model="form.firstname", placeholder="first name")
							input(type="text", name="lastname", ng-model="form.lastname", placeholder="last name")
							input(type="phone", name="phone", ng-model="form.phone", placeholder="phone")
							input(type="email", name="email", ng-model="form.email", placeholder="email")
							input(type="radio", id="radio_1", ng-model="form.type", value="private")
							label(for="radio_1") private
								.icon
							input(type="radio", id="radio_2", ng-model="form.type", value="business")
							label(for="radio_2") business
								.icon
							input(type="submit", value="submit", ng-click="formSubmit()")
			#wrapper(ng-view, ng-class="{'formOpen': showForm}")
		#footer
			.footer
				.links
					ul
						li
							a(href="") לאתר הבית
						li
							a(href="http://www.google.com") placeholder
						li
							a(href="") צור קשר
						li
							a(href="") אולמות תצוגה
						li
							a(href="") נתוני זיהום
						li
							a(href="") מדיניות ופרטיות
				.clr